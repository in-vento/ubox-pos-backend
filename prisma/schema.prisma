// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String   @default("USER") // SUPER_ADMIN, USER
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  businesses UserBusiness[]

  @@map("users")
}

model Business {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  isActive  Boolean  @default(true)
  plan      String?  @default("FREE")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // License fields
  licenseKey       String?   @unique
  licenseStatus    String    @default("ACTIVE") // ACTIVE, EXPIRED, SUSPENDED
  licenseExpiry    DateTime?
  maxDevices       Int       @default(1)
  lastLicenseCheck DateTime?

  // Relations
  users      UserBusiness[]
  devices    Device[]
  orders     Order[]
  payments   Payment[]
  products   Product[]
  staffUsers StaffUser[]
  logs       LicenseLog[]

  @@map("businesses")
}

model UserBusiness {
  id         String   @id @default(cuid())
  userId     String
  businessId String
  role       String   @default("ADMIN") // OWNER, ADMIN, MANAGER, POS
  createdAt  DateTime @default(now())

  // Relations
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@unique([userId, businessId])
  @@map("user_businesses")
}

model Device {
  id          String   @id @default(cuid())
  fingerprint String   @unique
  name        String
  businessId  String
  isAuthorized Boolean @default(false)
  role        String   @default("POS")
  lastSeen    DateTime @default(now())
  createdAt   DateTime @default(now())

  // Relations
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@map("devices")
}

model Product {
  id         String   @id @default(cuid())
  localId    String
  businessId String
  name       String
  price      Float
  stock      Float    @default(0)
  category   String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@unique([businessId, localId])
  @@map("products")
}

model StaffUser {
  id         String   @id @default(cuid())
  localId    String
  businessId String
  name       String
  role       String
  pin        String?
  status     String   @default("ACTIVE")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Relations
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@unique([businessId, localId])
  @@map("staff_users")
}

model Order {
  id          String   @id @default(cuid())
  localId     String
  businessId  String
  customId    String?
  customer    String?
  customerName String?
  waiterName   String?
  total       Float
  status      String   @default("PENDING")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)
  items    OrderItem[]
  payments Payment[]

  @@unique([businessId, localId])
  @@map("orders")
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productId   String?
  productName String
  quantity    Int
  price       Float
  createdAt   DateTime @default(now())

  // Relations
  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

model Payment {
  id         String   @id @default(cuid())
  localId    String
  businessId String
  orderId    String
  amount     Float
  method     String
  cashier    String?
  timestamp  DateTime @default(now())
  createdAt  DateTime @default(now())

  // Relations
  order    Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@unique([businessId, localId])
  @@map("payments")
}

model LicenseLog {
  id         String   @id @default(cuid())
  businessId String
  action     String   // ACTIVATE, RENEW, SUSPEND, EXPIRE, UPDATE_LICENSE
  details    String?
  timestamp  DateTime @default(now())

  // Relations
  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@map("license_logs")
}